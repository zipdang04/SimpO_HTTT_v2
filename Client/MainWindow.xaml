<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="SimpO Client" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnClient" Grid.Row="0" Click="btnClient_Click">Client</Button>
        <Button x:Name="btnViewer" Grid.Row="1" Click="btnViewer_Click">Viewer</Button>
        <Button x:Name="btnMC" Grid.Row="2" Click="btnMC_Click">MC</Button>
        <Button x:Name="btnScore" Grid.Row="3" Click="btnScore_Click">Điểm</Button>
    </Grid>
</Window>

    