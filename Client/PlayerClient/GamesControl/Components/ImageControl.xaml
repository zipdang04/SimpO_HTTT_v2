<UserControl x:Class="Client.PlayerClient.GamesControl.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.PlayerClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="image" Stretch="Uniform" SizeChanged="image_SizeChanged" />
        <Rectangle x:Name="rectUL" HorizontalAlignment="Center" VerticalAlignment="Center" Width="77.5" Height="107.5" Margin="-77.5,-107.5,0,0" Fill="Blue"/>
        <Rectangle x:Name="rectUR" HorizontalAlignment="Center" VerticalAlignment="Center" Width="77.5" Height="107.5" Margin="77.5,-107.5,0,0" Fill="Blue"/>
        <Rectangle x:Name="rectDL" HorizontalAlignment="Center" VerticalAlignment="Center" Width="77.5" Height="107.5" Margin="-77.5,107.5,0,0" Fill="Blue"/>
        <Rectangle x:Name="rectDR" HorizontalAlignment="Center" VerticalAlignment="Center" Width="77.5" Height="107.5" Margin="77.5,107.5,0,0" Fill="Blue"/>
        <Rectangle x:Name="rectTT" HorizontalAlignment="Center" VerticalAlignment="Center" Width="77.5" Height="107.5" Margin="0,0,0,0" Fill="Red"/>
    </Grid>
</UserControl>
