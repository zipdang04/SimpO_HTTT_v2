<UserControl x:Class="Client.PlayerClient.GamesControl.Components.QuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.PlayerClient.GamesControl.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer>
            <Label Grid.Column="0">
                <TextBlock x:Name="txtQuestion" TextWrapping="Wrap" FontSize="20"/>
            </Label>
        </ScrollViewer>
        <MediaElement x:Name="media" Grid.Column="1"/>
    </Grid>
</UserControl>
