<Window x:Class="Client.PlayerClient.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.PlayerClient"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800" Closed="Window_Closed" WindowStyle="None" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridPoint"/>
        <Grid Grid.Row="1">
            <Label Content="Tình hình chuyển file:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Margin="135,4,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="grid" Grid.Row="2">
        </Grid>
    </Grid>
</Window>
