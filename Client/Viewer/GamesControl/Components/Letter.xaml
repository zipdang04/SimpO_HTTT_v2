             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Viewer.GamesControl.Components"
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="52">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="background" ImageSource="../../../Resources/Effects/VCNV_LetterNormal.png"/>
        </Grid.Background>
        <Label x:Name="lblChar" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="36" FontFamily="Cascadia Mono" FontWeight="Bold"/>
    </Grid>
</UserControl>
