             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Server.HostServer.Components"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200">
    <Grid>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Margin="10,10,0,0" IsReadOnly="True"/>
        <Button x:Name="btnDialog" Content="..." HorizontalAlignment="Left" Margin="163,9,0,0" VerticalAlignment="Top" Width="26" Click="btnDialog_Click"/>
        <Button x:Name="btnClear" Content="Xóa" HorizontalAlignment="Left" Height="25" Margin="10,35,0,0" VerticalAlignment="Top" Width="87" Click="btnClear_Click"/>
        <Button x:Name="btnSend" Content="Gửi" HorizontalAlignment="Left" Height="25" Margin="100,35,0,0" VerticalAlignment="Top" Width="87" Click="btnSend_Click" IsEnabled="False"/>

    </Grid>
</UserControl>
